@model IPagedList<E_Commerce.Models.MainMenu>
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.First().MainMenuText)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.First().IsActive)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MainMenuText)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.IsActive)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MainMenuID }) |
            @Html.ActionLink("Details", "Details", new { id=item.MainMenuID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MainMenuID })
        </td>
    </tr>
}

</table>
@Html.PagedListPager(Model, page => Url.Action("Index", page))
